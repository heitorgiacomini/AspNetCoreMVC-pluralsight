<li class="nav-item dropdown">
    <a asp-controller="Pie"
       asp-action="Index"  class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Pies 
    </a>
    <ul class="dropdown-menu">

        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Pie" asp-action="List"
               asp-route-category="@category.CategoryName" class="dropdown-item">@category.CategoryName</a>
            </li>
        }
        <li><hr class="dropdown-divider"></li>
        <li>
            <a asp-controller="Pie" asp-action="list" asp-route-Category="" class="dropdown-item">View all pies</a>
        </li>
    </ul>
</li>